{% extends "base.jinja2" %}

{% block content %}
<div class="card">
    <div class="card-header">
        <div>Report Index</div>
        <div>ID: {{ report_id }}</div>
    </div>
    <div class="card-body">
        <h2>Session Information</h2>
        <table>
            <tr>
                <th>Session Hash</th>
                <td><span class="mono">{{ session.hash }}</span></td>
            </tr>
            <tr>
                <th>Imported File</th>
                <td>{{ session.imported_file }}</td>
            </tr>
            <tr>
                <th>Import Date</th>
                <td>{{ session.imported_on }}</td>
            </tr>
            <tr>
                <th>Document Type</th>
                <td>{{ session.document_type }}</td>
            </tr>
            <tr>
                <th>Output Directory</th>
                <td><span class="mono">{{ session.output_folder }}</span></td>
            </tr>
        </table>
        
        <h2>Available Reports</h2>
        <div class="reports-list">
            {% for report in reports %}
            <div class="card">
                <div class="card-header">
                    <div>{{ report.name }}</div>
                    <div>
                        <a href="{{ report.html_file }}" class="button">View HTML</a>
                        <a href="{{ report.pdf_file }}" class="button">View PDF</a>
                    </div>
                </div>
                <div class="card-body">
                    <p>{{ report.description }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
